<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.silascampos.acaosocial.View.MinhasVisitas">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/photo" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColorHint="#2D4471"
            android:textColor="#2D4471"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:id="@+id/tx_name"
            android:hint="Minhas Visitas"
            android:textSize="30dp" />

        </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Administrador:"
        android:id="@+id/textView9"
        />

    <ListView
        android:layout_marginTop="10dp"
        android:background="@drawable/customborder3"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/listView"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirmações"
        android:id="@+id/textView10" />

    <ListView
        android:layout_marginTop="10dp"
        android:background="@drawable/customborder3"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/listView2"
        />


</LinearLayout>
