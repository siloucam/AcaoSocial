<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.silascampos.acaosocial.View.Info">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_name"
        android:hint="Name"
        android:textSize="30dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_id"
        android:hint="Name"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_first_name"
        android:hint="first name"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_last_name"
        android:hint="last name"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_email"
        android:hint="email"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_gender"
        android:hint="gender"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/tx_birthday"
        android:hint="birthday"
        android:textSize="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Minhas Visitas"
        android:id="@+id/bt_visitas"
        android:textSize="30dp"
        android:onClick="updateUser"
        android:background="@drawable/customborder"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MEUS GRUPOS"
        android:id="@+id/bt_grupos"
        android:textSize="30dp"
        android:onClick="updateUser"
        android:background="@drawable/customborder"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:id="@+id/bt_voltar"
        android:textSize="30dp"
        android:onClick="logout"
        android:background="@drawable/customborder"
        />


</LinearLayout>
